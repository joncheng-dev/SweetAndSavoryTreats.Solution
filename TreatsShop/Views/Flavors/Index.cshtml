@{
  Layout = "_Layout";
}

@using SweetAndSavoryTreats.Models;
@model List<SweetAndSavoryTreats.Models.Flavor>;

<div class="main">
  @if(@Model.Count == 0)
  {
    <p>There are currently no flavor tags in the database.</p>
  }
  else
  {
    <ul>
      @foreach(Flavor entry in Model)
      {
        <li>@Html.ActionLink($"{entry.TagName}", "Details", new { id = entry.FlavorId })</li>
      }
    </ul>
  }
</div>
<hr/>
<p>@Html.ActionLink("Add a Flavor Tag", "Create")</p>